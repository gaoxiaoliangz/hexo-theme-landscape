<% var notPage = post => post.layout !== 'page' %>
<% if (type === 'index' || type === 'tag' || type === 'category'){ %>
  <% if (type === 'tag' || type === 'category') {
    const url = type === 'tag' ? url_for('tags/' + page.tag) : url_for('categories/' + page.category)
    const name = type === 'tag' ? page.tag : page.category
  %>
    <div class="page-info">
      <div class="container">
        <div class="page-info-inner">
          <h1 class="page-title">
            <% if (type === 'tag') { %>
            <span class="hash">#</span>
            <% } %>
            <a href="<%- url %>"><%- name %></a>
          </h1>
          <div class="page-description">
            <%- _p('posts_count', page.posts.length) %>
          </div>
        </div>
      </div>
    </div>
  <% } %>
  <div class="page-content">
    <div class="container">
      <% page.posts.data.filter(notPage).forEach(function(post){ %>
        <%- partial('article', {post: post, index: true}) %>
      <% }) %>
    </div>
  </div>
<% } else { %>
  <div class="page-content page-content--archive">
    <div class="page-content-inner">
    <% var last; %>
    <% page.posts.data.filter(notPage).forEach(function(post, i){ %>
      <% var year = post.date.year(); %>
      <% if (last != year){ %>
        <% if (last != null){ %>
          </div></section>
        <% } %>
        <% last = year; %>
        <section class="archives-wrap">
          <h2 class="archive-year-wrap">
            <a href="<%- url_for(config.archive_dir + '/' + year) %>" class="archive-year"><%= year %></a>
          </h2>
          <div class="archives">
      <% } %>
      <%- partial('archive-post', {post: post, even: i % 2 == 0}) %>
    <% }) %>
    <% if (page.posts.length){ %>
      </div></section>
    <% } %>
    </div>
  </div>
<% } %>
<%- partial('pagination') %>
